<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<nav>
  <ul>
  </ul>
</nav>

<table>
  <tr>
    <td>Date</td>
    <td>Title</td>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.created_at.strftime("%d %b. %Y") %></td>
    <td><%= link_to post.title, post_path(post) %></td>
  </tr>
<% end %>
</table>

<%= link_to "New Post", new_post_path %>
