<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<table>
  <tr>
    <td>Date</td>
    <td>Title</td>
    <td>Author</td>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.created_at.strftime("%d %b. %Y") %></td>
    <td><%= link_to post.title, post_path(post) %></td>
    <td><%= post.author %></td>

  </tr>
<% end %>
</table>

<% if belongs_to_tenant? %>
  <%= link_to "New Post", new_post_path %>
<% end %>
<%= link_to "Home", root_url(:subdomain => 'www') %>
